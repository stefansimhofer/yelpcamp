extends layout

block content
  .row.justify-content-center
    .col-lg-8
      h1 Create a New Campground
      form(action="/campgrounds" method="POST")
        .form-group
          input(class="form-control form-control-lg" type="text" name="name" placeholder="Name")
        .form-group
          input(class="form-control form-control-lg" type="number" min="0.01" step="0.01" name="price" placeholder="Price")
        .form-group  
          input(class="form-control form-control-lg" type="text" name="image" placeholder="Imgage url")
        .form-group
          textarea(class="form-control form-control-lg" rows="8" name="description" placeholder="Description")
        button(class="btn btn-info btn-lg btn-block") Save Campground