extends ../layout

block content
  .row.justify-content-center
    .col-lg-6
      h1 Add a Comment to #{campground.name}
      form(action="/campgrounds/" + campground._id + "/comments" method="POST")
        .form-group
          textarea(class="form-control form-control-lg" type="text" name="comment[text]" placeholder="Text" rows="8")
        button(class="btn btn-primary btn-lg btn-block") Save Comment