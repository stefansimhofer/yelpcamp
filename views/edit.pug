extends layout

block content
  .row.justify-content-center
    .col-lg-8
      h1 Edit #{campground.name}
      form(action="/campgrounds/" + campground._id + "?_method=PUT" method="POST")
        .form-group
          input(class="form-control form-control-lg" type="text" name="campground[name]" placeholder="Name" value=campground.name) 
        .form-group
          input(class="form-control form-control-lg" type="number" min="0.01" step="0.01" name="campground[price]" value="#{campground.price}")
        .form-group  
          input(class="form-control form-control-lg" type="text" name="campground[image]" placeholder="Imgage url" value=campground.image)
        .form-group
          textarea(class="form-control form-control-lg" name="campground[description]" placeholder="Description" rows="8") #{campground.description}
        button(class="btn btn-primary btn-lg btn-block") Save Campground